{
  "fields": {
    "name": {
      "type": "text",
      "label": "Name",
      "placeholder": "Enter your name",
      "required": true,
      "constraints": {
        "minLength": 0,
        "maxLength": 50
      },
      "validations": ["alphaOnly"]
    },
    "email": {
      "type": "email",
      "label": "Email Address",
      "placeholder": "Enter your email",
      "required": true,
      "validations": ["emailFormat"]
    },
    "userId": {
      "type": "text",
      "label": "User ID",
      "placeholder": "Enter user ID",
      "required": true,
      "constraints": {
        "minLength": 4,
        "maxLength": 20
      }
    },
    "password": {
      "type": "password",
      "label": "Password",
      "placeholder": "Enter password",
      "required": true,
      "icon": "lock",
      "showToggle": true,
      "constraints": {
        "minLength": 8
      },
      "validations": ["strongPassword"]
    },
    "organizationCode": {
      "type": "text",
      "label": "Organization Code",
      "placeholder": "ORG-XXXX",
      "required": true,
      "constraints": {
        "minLength": 4,
        "maxLength": 10
      },
      "validations": ["noSpaces"]
    },
    "organizationName": {
      "type": "text",
      "label": "Organization Name",
      "placeholder": "Enter organization name",
      "required": true
    },
    "address": {
      "type": "textarea",
      "label": "Street Address",
      "placeholder": "Enter street address",
      "required": false,
      "rows": 2,
      "colSpan": 3,
      "constraints": {
        "maxLength": 200
      }
    },
    "firstName": {
      "type": "text",
      "label": "First Name",
      "placeholder": "Enter first name",
      "required": true,
      "constraints": {
        "minLength": 2,
        "maxLength": 50
      },
      "validations": ["alphaOnly"]
    },
    "lastName": {
      "type": "text",
      "label": "Last Name",
      "placeholder": "Enter last name",
      "required": true,
      "constraints": {
        "minLength": 2,
        "maxLength": 50
      },
      "validations": ["alphaOnly"]
    },
    "phone": {
      "type": "tel",
      "label": "Phone",
      "placeholder": "+91 98765 43210",
      "required": true,
      "constraints": {
        "minLength": 10,
        "maxLength": 15
      },
      "validations": ["phoneFormat"]
    },
    "department": {
      "type": "select",
      "label": "Department",
      "placeholder": "Select Department",
      "required": true,
      "options": [
        { "value": "engineering", "label": "Engineering" },
        { "value": "sales", "label": "Sales" },
        { "value": "marketing", "label": "Marketing" },
        { "value": "hr", "label": "HR" },
        { "value": "finance", "label": "Finance" },
        { "value": "operations", "label": "Operations" }
      ]
    },
    "designation": {
      "type": "text",
      "label": "Designation",
      "placeholder": "e.g. Senior Developer",
      "required": true,
      "constraints": {
        "maxLength": 50
      }
    },
    "branch": {
      "type": "select",
      "label": "Branch",
      "placeholder": "Select Branch",
      "required": true,
      "options": [
        { "value": "mumbai", "label": "Mumbai - Head Office" },
        { "value": "delhi", "label": "Delhi - North Zone" },
        { "value": "bangalore", "label": "Bangalore - South Zone" },
        { "value": "chennai", "label": "Chennai - East Zone" },
        { "value": "pune", "label": "Pune - West Zone" }
      ]
    },
    "city": {
      "type": "text",
      "label": "City",
      "placeholder": "Enter city",
      "required": false,
      "constraints": {
        "maxLength": 50
      }
    },
    "state": {
      "type": "text",
      "label": "State",
      "placeholder": "Enter state",
      "required": false,
      "constraints": {
        "maxLength": 50
      }
    },
    "pincode": {
      "type": "text",
      "label": "Pincode",
      "placeholder": "Enter pincode",
      "required": false,
      "constraints": {
        "minLength": 6,
        "maxLength": 6
      },
      "validations": ["numericOnly"]
    }
  }
}
